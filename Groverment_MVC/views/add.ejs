<%- include('include/header') %>
<body>
    <div class="container mt-5">
        <h1>Add User</h1>
        <%= message%>
        <form action="/add" method="post" class="form-group">
            <label for="">ID</label>
            <input type="text" name="id" class="form-control">
            <label for="">Firstname</label>
            <input type="text" name="firstname" class="form-control">
            <label for="">Lastname</label>
            <input type="text" name="lastname" class="form-control">
            <label for="">Age</label>
            <input type="text" name="age" class="form-control">

            <select class="form-select mt-3" name="university_id" aria-label="Default select example ">
                <% universitys.forEach(function(university) { %>
                <option value=<%=university._id%>><%=university.name%></option>
                <% })%>
              </select>
            <br>
            <input type="submit" value="Enter" class="btn btn-success">
        </form>
    </div>
</body>

<%- include('include/footer') %>
<%- include('include/header') %>
    <div class="container mt-5">
        <h1 align="center">Edit Student</h1>
        <% if(message) { %>
            <h5><%=message%></h5>
        <% } %>
        <form action="/update/<%=student[0]._id%>" class="form-group" method="POST">
            <label for="student ID">Student ID</label>
            <input type="text" name="id" class="form-control" value="<%=student[0].id%>" disabled>
            <br>
            <label for="firstname">Firstname</label>
            <input type="text" name="firstname" class="form-control" value="<%=student[0].firstname%>" >
            <br>
            <label for="lastname">Lastname</label>
            <input type="text" name="lastname"class="form-control" value="<%=student[0].lastname%>" >
            <br>
            <label for="year">Year</label>
            <input type="text" name="year" class="form-control" value="<%=student[0].year%>" disabled >
            <br>
            <button type="submit" class="btn btn-success">Enter</button>
        </form>
    </div>

<%- include('include/footer') %>

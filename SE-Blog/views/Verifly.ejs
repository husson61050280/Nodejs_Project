    <title>Verify Account</title>
    <!DOCTYPE html>
    <html>
        <head>
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css">
            <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
            <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
        </head>
    <body>
        <div class="container h-100">
        <div class="d-flex justify-content-center">
            <div class="card mt-5 col-md-4 animated bounceInDown myForm">
                <div class="card-header">
                    <h4> Please verify your identity</h4>
                </div>
                <div class="card-body">
                    <form action="/User/Verifly" method="post">
                        <div id="dynamic_container">
                            <div class="input-group mt-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text br-15"><i class="fas fa-key"></i></span>
                                </div>
                                <input type="text" name="secret_token" class="form-control input_pass" value=""
                                placeholder="Verifly Key : XXXXX">
                                
                            <input type="hidden" name="user_secret_token" value="<%=users.secret_token%>">
                            <input type="hidden" name="userid" value="<%=users._id%>">
                            </div>
                        </div>
                        <div class="card-footer">
                            <button class="btn btn-success btn-sm float-left submit_btnn"><i class="fas fa-check-circle"></i> Confirm</button>
                            <a href="SignIn" class="btn btn-success btn-sm float-right submit_btn"><i class="fas fa-times-circle"></i> Cancel</a>
                        </div>
                    </form>
                </div>
               
            </div>
        </div>
        </div>
    </body>
    </html>